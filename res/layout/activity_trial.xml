<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trial">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="1dp"
        app:cardBackgroundColor="#003366">


        <RelativeLayout
            android:layout_width="641dp"
            android:layout_height="98dp">

            <EditText
                android:id="@+id/filename_text"
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:hint="File Name"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <ImageView
                android:id="@+id/edit_image"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="77dp"
                android:layout_marginBottom="30dp"
                android:onClick="readpdf"
                app:srcCompat="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:id="@+id/search_image"
                android:layout_width="33dp"
                android:layout_height="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="190dp"
                android:layout_marginBottom="23dp"
                app:srcCompat="@drawable/ic_search_black_24dp" />

            <ImageView
                android:id="@+id/save_image"
                android:layout_width="33dp"
                android:layout_height="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="135dp"
                android:layout_marginBottom="23dp"
                android:onClick="create_pdf"
                app:srcCompat="@drawable/ic_save_black_24dp" />

            <ImageView
                android:id="@+id/undo_image"
                android:layout_width="33dp"
                android:layout_height="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="252dp"
                android:layout_marginBottom="24dp"
                app:srcCompat="@drawable/ic_undo_black_24dp" />

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="39dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="23dp"
                android:onClick="newpdf"
                app:srcCompat="@drawable/ic_add_black_24dp" />

            <ImageView
                android:id="@+id/voice_image"
                android:layout_width="33dp"
                android:layout_height="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="308dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="23dp"
                android:onClick="speech1"
                app:srcCompat="@drawable/ic_keyboard_voice_black_24dp" />

            <ImageView
                android:id="@+id/volumne_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="359dp"
                android:layout_marginBottom="26dp"
                android:onClick="voice1"
                app:srcCompat="@drawable/ic_volume_up_black_24dp" />

            />

            <TextView
                android:id="@+id/open_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="23dp"
                android:layout_marginBottom="9dp"
                android:text="New"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="73dp"
                android:layout_marginBottom="8dp"
                android:text="Edit"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/save_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="137dp"
                android:layout_marginBottom="7dp"
                android:text="Save"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="184dp"
                android:layout_marginBottom="7dp"
                android:text="Search"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/undo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="252dp"
                android:layout_marginBottom="5dp"
                android:text="Undo"
                android:textColor="#fff" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="362dp"
        android:layout_height="599dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="108dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/content_text"
                android:layout_width="343dp"
                android:layout_height="581dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>